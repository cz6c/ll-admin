{
  "name": "ll-admin",
  "private": true,
  "version": "0.0.6",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "cz": "git add . && czg",
    "build-config": "pnpm --filter @packages/config build",
    "build-common": "pnpm --filter @packages/common build",
    "dev-admin": "pnpm --filter @apps/admin dev",
    "dev-server": "pnpm --filter @apps/server start:dev",
    "turbo": "pnpm turbo run build",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@packages/config": "workspace:^",
    "@packages/common": "workspace:^"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "cz-git": "^1.8.0",
    "czg": "^1.8.0",
    "husky": "^8.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config .commitlintrc.js -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}